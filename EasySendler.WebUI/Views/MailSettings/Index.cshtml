@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Password)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SMTP)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SMTPPort)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Pop3)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Pop3Port)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EnableSSL)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Imap)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ImapPort)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.MailSettingsId }) |
            @Html.ActionLink("Details", "Details", new { id=item.MailSettingsId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.MailSettingsId })
        </td>
    </tr>
}

</table>
