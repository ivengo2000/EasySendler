@model IEnumerable<BuisenessLogicLayer.Recipient>


@{
    ViewBag.Title = "Recipients";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}

<h2>Recipients</h2>

<p>
    @Html.ActionLink("Create New", "Create",null, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SureName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SureName)
            </td>
            <td>
                
                <button class="btn btn-warning btn-xs" type="button" 
                        data-toggle="modal" data-target="#modalRecipient" data-ajax-url="@Url.Action("GetEdit", "Recipients")" 
                        data-id="@item.RecipientId" data-action-type="Edit">Edit</button>
             
                @Html.ActionLink("Edit", "Edit", new {id = item.RecipientId}, new {@class = "btn btn-warning btn-xs"}) |
                
                <button class="btn btn-info btn-xs" type="button" data-toggle="modal" 
                        data-target="#modalRecipient" data-ajax-url="@Url.Action("GetDetails", "Recipients")" 
                        data-id="@item.RecipientId" data-action-type="Details">Details</button>

                @Html.ActionLink("Details", "Details", new {id = item.RecipientId}, new {@class = "btn btn-info btn-xs"}) |

                @Html.ActionLink("Delete", "Delete", new {id = item.RecipientId}, new {@class = "btn btn-danger btn-xs"})
            </td>
        </tr>
    }

</table>

<div class="modal" id="modalRecipient" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Edit</h4>
            </div>
            <div class="modal-body">

            </div>
            <div class="modal-footer">
                <button class="btn btn-primary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div> 
<script type="text/template" id="recipientDetailsTemplate">
    <dl class="dl-horizontal">
        <dt>Email</dt><dd><%- item.Email %></dd>
        <dt>Name</dt><dd><%- item.Name %></dd>
        <dt>SureName</dt><dd><%- item.SureName %></dd>
    </dl>
</script>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/additionaljq")
    <script type="text/javascript">
        $(document).ready(function () { new Recipients() });
    </script>
}
